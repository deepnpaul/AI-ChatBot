@model ChatBotModel
@{
    
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI ChatBot</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #343541;
            color: #fff;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        .chat-container {
            width: 400px;
            background-color: #40414f;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

        .response-box {
            background-color: #444654;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 15px;
            min-height: 50px;
        }

        .chat-box {
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
        }

        .send-button {
            width: 100%;
            padding: 10px;
            margin-top: 10px;
            background-color: #19c37d;
            border: none;
            border-radius: 5px;
            color: white;
            font-size: 16px;
            cursor: pointer;
        }

            .send-button:hover {
                background-color: #14a766;
            }
    </style>
</head>
<body>

    <div class="chat-container">
        <!-- Response Box -->
        <div class="response-box">
            <strong>AI Response:</strong>
            <p>@ViewBag.ResponseMessage</p>
        </div>

        <!-- Chat Input -->
        @using (Html.BeginForm("AiChatBot", "ChatBot", FormMethod.Post))
        {
            @Html.TextAreaFor(model => model.prompt, new { @class = "chat-box", placeholder = "Type your message...", required = "required", @id = "textarea" })
            <button type="submit" class="send-button">Send</button>
            
        }
        <button onclick="Voice()" class="send-button">Click to speack</button>

        <script>
            function Voice() {
                // Check if the browser supports SpeechRecognition
                if (!('webkitSpeechRecognition' in window)) {
                    alert("Your browser does not support Speech Recognition. Please use Google Chrome.");
                    return;
                }

                var recognition = new webkitSpeechRecognition(); // Corrected name
                recognition.lang = "en-GB"; // Corrected property name
                recognition.onresult = function (event) {
                    document.getElementById("textarea").value = event.results[0][0].transcript;
                };

                recognition.onerror = function (event) {
                    console.error("Speech Recognition Error:", event.error);
                    alert("Error occurred: " + event.error);
                };

                recognition.start();
            }
        </script>
       
    </div>

</body>
</html>
